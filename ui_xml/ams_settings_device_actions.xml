<!-- AMS Device Actions Settings Overlay Panel -->
<component>
  <view name="ams_settings_device_actions"
        extends="overlay_panel" width="#overlay_panel_width_full" title="Device Actions" bg_color="#app_bg_color">
    <!-- Content Area (scrollable) -->
    <lv_obj name="overlay_content"
            width="100%" flex_grow="1" style_bg_opa="0" style_pad_all="#space_md" scrollable="true" scroll_dir="ver"
            style_border_width="0" flex_flow="column" style_pad_gap="#space_sm">
      <!-- Description text -->
      <text_small name="description"
                  width="100%" text="Device-specific configuration and maintenance." style_text_color="#text_secondary"/>
      <!-- ================================================================== -->
      <!-- Sections Container (dynamically populated in C++)                   -->
      <!-- ================================================================== -->
      <lv_obj name="sections_container"
              width="100%" height="content" style_bg_opa="0" style_border_width="0" style_pad_all="0" flex_flow="column"
              style_pad_gap="#space_md" scrollable="false">
        <!-- Section groups created dynamically by C++ code -->
      </lv_obj>
      <!-- ================================================================== -->
      <!-- Status Card                                                         -->
      <!-- ================================================================== -->
      <ui_card name="status_card"
               width="100%" height="content" style_radius="#border_radius" style_pad_all="#space_md" flex_flow="row"
               style_flex_main_place="start" style_flex_cross_place="center" style_pad_gap="#space_sm">
        <icon src="info" size="sm" variant="secondary"/>
        <lv_obj width="content"
                height="content" style_bg_opa="0" style_border_width="0" style_pad_all="0" flex_flow="column"
                style_pad_gap="#space_xs" scrollable="false" flex_grow="1">
          <text_body text="Status" style_text_color="#text_primary"/>
          <text_small name="status_label" bind_text="ams_device_actions_status" style_text_color="#text_secondary"/>
        </lv_obj>
      </ui_card>
    </lv_obj>
  </view>
</component>
