<component>
  <!-- Bed Mesh Visualization Panel -->
  <!-- Uses shared backdrop from navigation system -->
  <view extends="lv_obj" name="bed_mesh_panel" width="#overlay_panel_width_large" height="100%" align="right_mid" style_bg_opa="255" style_bg_color="#card_bg" style_pad_all="0" style_border_width="0" scrollable="false" flex_flow="column">
    <!-- Header Bar (uses improved header_bar component) -->
    <header_bar name="overlay_header" title="Bed Mesh"/>
    <!-- Content Area: Horizontal split (Left=Canvas, Right=Info) -->
    <lv_obj name="overlay_content" flex_grow="1" width="100%" style_bg_opa="0" style_pad_all="#space_md" scrollable="false" style_border_width="0" flex_flow="row" style_pad_gap="#space_md">
      <!-- Left: Canvas (fills remaining space) - uses touch drag for rotation -->
      <bed_mesh name="bed_mesh_canvas" flex_grow="1" height="100%" clickable="true" style_border_width="0"/>
      <!-- Right: Info column (content-sized, canvas takes remaining space) -->
      <lv_obj width="content" height="100%" flex_flow="column" style_bg_opa="0" style_border_width="0" style_pad_all="0" style_pad_gap="#space_md">
        <!-- Profile selector -->
        <lv_obj width="content" height="content" flex_flow="column" style_bg_opa="0" style_border_width="0" style_pad_all="0" style_pad_gap="#space_xs">
          <text_small text="Profile" style_text_align="left"/>
          <lv_dropdown name="profile_dropdown" options="(no profiles)" width="#z_button_width" height="#input_height" style_border_width="#input_border_width" style_border_color="#card_border" style_border_opa="255" style_radius="#border_radius" style_pad_all="#space_md"/>
        </lv_obj>
        <!-- Statistics section (uses border for visual separation) -->
        <lv_obj width="content" flex_grow="1" style_bg_opa="0" style_border_width="1" style_border_color="#card_border" style_radius="#card_radius" style_pad_all="#space_md" flex_flow="column" style_pad_gap="#space_sm">
          <text_heading text="Mesh Info"/>
          <text_small name="mesh_dimensions_label" bind_text="bed_mesh_dimensions" style_text_align="left"/>
          <text_small name="mesh_z_range_label" bind_text="bed_mesh_z_range" style_text_align="left" long_mode="wrap"/>
          <text_small name="mesh_variance_label" bind_text="bed_mesh_variance" style_text_align="left"/>
        </lv_obj>
      </lv_obj>
    </lv_obj>
  </view>
</component>
