<component>
	<!-- WiFi Network List Item - Reusable Component -->
	<!-- Displays network SSID, signal strength icon, and security status -->
	<!-- Subjects are created per-instance in C++ and bound programmatically -->

	<view extends="lv_button"
	      width="100%"
	      scrollable="false"
	      style_bg_opa="0"
	      style_border_width="0"
	      style_shadow_width="0"
	      style_pad_all="0"
	      style_pad_gap="#list_item_padding"
	      flex_flow="row"
	      style_flex_main_place="start"
	      style_flex_cross_place="center">

		<!-- Signal strength icon (left) -->
		<lv_image name="signal_icon"
		          src="mat_wifi_strength_4"
/>

		<!-- SSID and security type column (center) -->
		<lv_obj flex_grow="1"
				height="#list_item_height"
		        style_bg_opa="0"
		        style_border_width="1"
		        style_pad_all="0"
		        style_pad_gap="4"
		        flex_flow="row"
		        style_flex_main_place="start"
		        style_flex_cross_place="center">

			<!-- Network SSID -->
			<lv_label name="ssid_label"
			          width="100%"
			          style_text_font="#list_item_font"
/>

			<!-- Security type -->
			<lv_label name="security_label"
			          width="100%"
			          style_text_font="montserrat_12"
			          style_text_color="#text_secondary"/>
		</lv_obj>

		<!-- Lock icon (right) - shown for secured networks -->
		<lv_label name="lock_icon"
		          text="#icon_lock"
		          style_text_font="fa_icons_24"
/>
	</view>
</component>
