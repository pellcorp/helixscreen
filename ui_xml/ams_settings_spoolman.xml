<!-- AMS Spoolman Settings Overlay Panel -->
<!-- Sub-panel for configuring Spoolman integration settings (sync, polling interval) -->
<component>
  <view name="ams_settings_spoolman"
        extends="overlay_panel" width="#overlay_panel_width_full" title="Spoolman" bg_color="#app_bg_color">
    <!-- Content Area (scrollable) -->
    <lv_obj name="overlay_content"
            width="100%" flex_grow="1" style_bg_opa="0" style_pad_all="#space_md" scrollable="true" scroll_dir="ver"
            style_border_width="0" flex_flow="column" style_pad_gap="#space_sm">
      <!-- Description text -->
      <text_small name="description"
                  width="100%" text="Configure Spoolman integration and weight sync settings."
                  style_text_color="#text_secondary"/>
      <!-- ================================================================== -->
      <!-- Sync Enable Row                                                     -->
      <!-- ================================================================== -->
      <ui_card name="sync_card"
               width="100%" height="content" style_radius="#border_radius" style_pad_all="#space_md" flex_flow="row"
               style_flex_main_place="space_between" style_flex_cross_place="center">
        <!-- Left side: Icon + Label/Description -->
        <lv_obj width="content"
                height="content" style_bg_opa="0" style_border_width="0" style_pad_all="0" flex_flow="row"
                style_flex_cross_place="center" style_pad_gap="#space_sm" scrollable="false" flex_grow="1">
          <icon src="refresh" size="sm" variant="secondary"/>
          <lv_obj width="content"
                  height="content" style_bg_opa="0" style_border_width="0" style_pad_all="0" flex_flow="column"
                  style_pad_gap="#space_xs" scrollable="false">
            <text_body text="Sync with Spoolman" style_text_color="#text_primary"/>
            <text_small text="Automatically poll Spoolman for weight updates" style_text_color="#text_secondary"/>
          </lv_obj>
        </lv_obj>
        <!-- Right side: Switch toggle -->
        <lv_switch name="sync_toggle" width="50" height="28">
          <bind_state_if_eq subject="ams_spoolman_sync_enabled" state="checked" ref_value="1"/>
          <event_cb trigger="value_changed" callback="on_ams_spoolman_sync_toggled"/>
        </lv_switch>
      </ui_card>
      <!-- ================================================================== -->
      <!-- Refresh Interval Row                                                -->
      <!-- ================================================================== -->
      <ui_card name="interval_card"
               width="100%" height="content" style_radius="#border_radius" style_pad_all="#space_md" flex_flow="row"
               style_flex_main_place="space_between" style_flex_cross_place="center">
        <!-- Left side: Icon + Label/Description -->
        <lv_obj width="content"
                height="content" style_bg_opa="0" style_border_width="0" style_pad_all="0" flex_flow="row"
                style_flex_cross_place="center" style_pad_gap="#space_sm" scrollable="false" flex_grow="1">
          <icon src="clock" size="sm" variant="secondary"/>
          <lv_obj width="content"
                  height="content" style_bg_opa="0" style_border_width="0" style_pad_all="0" flex_flow="column"
                  style_pad_gap="#space_xs" scrollable="false">
            <text_body text="Refresh Interval" style_text_color="#text_primary"/>
            <text_small text="How often to check Spoolman for weight updates" style_text_color="#text_secondary"/>
          </lv_obj>
        </lv_obj>
        <!-- Right side: Dropdown for interval selection -->
        <lv_dropdown name="interval_dropdown"
                     width="100" height="36" options="30s&#10;1 min&#10;2 min&#10;5 min" style_pad_left="#space_sm"
                     style_pad_right="#space_sm">
          <event_cb trigger="value_changed" callback="on_ams_spoolman_interval_changed"/>
        </lv_dropdown>
      </ui_card>
      <!-- ================================================================== -->
      <!-- Info Card                                                          -->
      <!-- ================================================================== -->
      <ui_card name="info_card"
               width="100%" height="content" style_radius="#border_radius" style_pad_all="#space_md" flex_flow="row"
               style_flex_main_place="start" style_flex_cross_place="center" style_pad_gap="#space_sm">
        <!-- Left side: Icon -->
        <icon src="info" size="sm" variant="secondary"/>
        <!-- Middle: Info text -->
        <lv_obj width="content"
                height="content" style_bg_opa="0" style_border_width="0" style_pad_all="0" flex_flow="column"
                style_pad_gap="#space_xs" scrollable="false" flex_grow="1">
          <text_small width="100%"
                      text="Weight data is synced from Spoolman to display remaining filament. Changes are also synced when prints start, pause, or complete."
                      style_text_color="#text_secondary"/>
        </lv_obj>
      </ui_card>
    </lv_obj>
  </view>
</component>
