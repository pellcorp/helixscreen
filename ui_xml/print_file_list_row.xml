<component>
  <api>
    <prop name="filename" type="string"/>
    <prop name="file_size" type="string"/>
    <prop name="modified_date" type="string"/>
    <prop name="print_time" type="string"/>
  </api>
  <!-- List row container (children pass clicks through to parent) -->
  <view name="list_row"
        extends="lv_obj" width="100%" height="content" style_bg_color="#card_bg" style_bg_opa="255"
        style_radius="#space_xs" style_border_width="0" style_pad_top="#space_md" style_pad_bottom="#space_md"
        style_pad_left="#space_md" style_pad_right="#space_md" flex_flow="row" style_flex_main_place="start"
        style_flex_cross_place="center" clickable="true">
    <!-- Filename (flex-grow, left-aligned) -->
    <text_small name="row_filename"
                width="510" text="$filename" style_text_align="left" long_mode="dots" flex_grow="1" style_pad_all="0"
                clickable="false"/>
    <!-- Status (70px, centered) - contains icons for print history -->
    <lv_obj name="row_status"
            width="70" height="content" style_bg_opa="0" style_border_width="0" style_pad_all="0" flex_flow="row"
            style_flex_main_place="center" style_flex_cross_place="center" style_pad_gap="2" clickable="false">
      <!-- Currently printing indicator (accent = blue for info) -->
      <icon name="status_printing" src="clock" size="xs" variant="accent" style_translate_y="-2" hidden="true"/>
      <!-- Success count (number + checkmark) -->
      <lv_obj name="status_success_container"
              width="content" height="content" style_bg_opa="0" style_border_width="0" style_pad_all="0" flex_flow="row"
              style_flex_main_place="center" style_flex_cross_place="center" style_flex_track_place="center"
              style_pad_gap="2" hidden="true" clickable="false">
        <text_small name="status_success_count" text="" style_pad_all="0" clickable="false"/>
        <icon name="status_success_icon" src="check" size="xs" variant="success" style_translate_y="-2"/>
      </lv_obj>
      <!-- Failed indicator (error - something went wrong) -->
      <icon name="status_failed" src="alert" size="xs" variant="error" style_translate_y="-2" hidden="true"/>
      <!-- Cancelled indicator (user stopped the print) -->
      <icon name="status_cancelled" src="cancel" size="xs" variant="warning" style_translate_y="-2" hidden="true"/>
    </lv_obj>
    <!-- Size (80px, right-aligned) -->
    <text_small name="row_size"
                width="80" text="$file_size" style_text_align="right" flex_grow="0" style_pad_all="0" clickable="false"/>
    <!-- Modified date (130px, right-aligned) -->
    <text_small name="row_modified"
                width="130" text="$modified_date" style_text_align="right" flex_grow="0" style_pad_all="0"
                clickable="false"/>
    <!-- Print time (90px, right-aligned) -->
    <text_small name="row_print_time"
                width="90" text="$print_time" style_text_align="right" flex_grow="0" style_pad_all="0" clickable="false"/>
  </view>
</component>
