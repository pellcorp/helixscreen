<component>
  <!-- First-Run Wizard: Printer Identification Screen -->
  <!-- Auto-detect printer type and allow user to name printer -->
  <consts>
    <!-- Step metadata (read by wizard orchestrator) -->
    <str name="step_title" value="Printer Setup: Identity"/>
    <!-- Subtitle is dynamic - bound to printer_detection_status in C++ -->
    <str name="step_subtitle" value="Detecting printer type..."/>
    <int name="step_order" value="3"/>
  </consts>
  <view extends="lv_obj" width="100%" height="100%" scrollable="false" style_bg_opa="0" style_border_width="0" style_pad_all="0" flex_flow="column" style_flex_main_place="start" style_flex_cross_place="start" name="wizard_printer_identify_root">
    <!-- Main card container -->
    <ui_card width="100%" flex_grow="1" style_pad_gap="#gap_normal" flex_flow="row" style_flex_main_place="start" style_flex_cross_place="start">
      <!-- Left column: Name input + Image preview -->
      <lv_obj flex_grow="1" height="100%" style_bg_opa="0" style_border_width="0" style_pad_all="0" style_pad_gap="#gap_normal" flex_flow="column" style_flex_main_place="start" style_flex_cross_place="start">
        <!-- Printer name input -->
        <lv_obj width="100%" height="content" style_bg_opa="0" style_border_width="0" style_pad_all="0" style_pad_gap="#gap_tiny" flex_flow="column" style_flex_main_place="start" style_flex_cross_place="start">
          <text_body text="Printer Name" width="100%"/>
          <lv_textarea name="printer_name_input" bind_text="printer_name" placeholder_text="My Printer" width="100%" height="#input_height"/>
        </lv_obj>
        <!-- Printer image preview (fills remaining space) -->
        <lv_obj width="100%" flex_grow="1" style_bg_opa="0" style_border_width="0" style_pad_all="0" flex_flow="column" style_flex_main_place="center" style_flex_cross_place="center">
          <lv_image name="printer_preview_image" src="A:assets/images/printers/generic-corexy-750x930.png" width="100%" height="100%" inner_align="contain"/>
        </lv_obj>
      </lv_obj>
      <!-- Right column: Printer type roller -->
      <lv_obj flex_grow="1" height="100%" style_bg_opa="0" style_border_width="0" style_pad_all="0" style_pad_gap="#gap_tiny" flex_flow="column" style_flex_main_place="start" style_flex_cross_place="start">
        <text_body text="Printer Type" width="100%"/>
        <!-- Roller options set from PrinterTypes::PRINTER_TYPES_ROLLER in C++ -->
        <lv_roller name="printer_type_roller" width="100%" flex_grow="1" style_text_font="#font_body" style_border_width="2" style_border_opa="60" style_selected_bg_color="#primary_color"/>
      </lv_obj>
    </ui_card>
  </view>
</component>
