<component>
  <!-- First-Run Wizard: Printer Identification Screen -->
  <!-- Auto-detect printer type and allow user to name printer -->
  <consts>
    <!-- Step metadata (read by wizard orchestrator) -->
    <str name="step_title" value="Printer Setup: Identity"/>
    <!-- Subtitle is dynamic - bound to printer_detection_status in C++ -->
    <str name="step_subtitle" value="Detecting printer type..."/>
    <int name="step_order" value="3"/>
  </consts>
  <view name="wizard_printer_identify_root"
        extends="lv_obj" width="100%" height="100%" scrollable="false" style_bg_opa="0" style_border_width="0"
        style_pad_all="0" flex_flow="column" style_flex_main_place="start" style_flex_cross_place="start">
    <!-- Main card container -->
    <ui_card width="100%"
             flex_grow="1" style_pad_gap="#space_md" flex_flow="row" style_flex_main_place="start"
             style_flex_cross_place="start">
      <!-- Left column: Name input + Image preview -->
      <lv_obj height="100%" scrollable="false"
              flex_grow="1" style_pad_all="0" style_pad_gap="#space_md" flex_flow="column" style_flex_main_place="start"
              style_flex_cross_place="start">
        <!-- Printer name input -->
        <lv_obj width="100%" scrollable="false"
                height="content" style_pad_all="0" style_pad_gap="#space_xs" flex_flow="column"
                style_flex_main_place="start" style_flex_cross_place="start">
          <text_body width="100%" text="Printer Name"/>
          <text_input name="printer_name_input" width="100%" height="#input_height" bind_text="printer_name" placeholder_text="My Printer" scrollbar_mode="off"/>
        </lv_obj>
        <!-- Printer image preview (fills remaining space) -->
        <lv_obj width="100%" scrollable="false"
                flex_grow="1" style_pad_all="0" flex_flow="column" style_flex_main_place="center"
                style_flex_cross_place="center">
          <lv_image name="printer_preview_image"
                    width="100%" height="100%" inner_align="contain"/>
        </lv_obj>
      </lv_obj>
      <!-- Right column: Printer type list -->
      <lv_obj height="100%"
              flex_grow="1" style_pad_all="0" style_pad_gap="#space_xs" flex_flow="column" style_flex_main_place="start"
              style_flex_cross_place="start">
        <text_body width="100%" text="Printer Type"/>
        <!-- Scrollable list of printer types (populated dynamically from PrinterDetector) -->
        <lv_obj name="printer_type_list"
                width="100%" flex_grow="1" style_pad_all="#space_xs" style_pad_gap="#space_xs"
                style_bg_color="#screen_bg" style_bg_opa="255" style_radius="#border_radius"
                scrollable="true" scroll_dir="ver" flex_flow="column"/>
      </lv_obj>
    </ui_card>
  </view>
</component>
